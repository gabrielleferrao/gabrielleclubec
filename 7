int main()
{
    int anos, meses, dias, idade;
    printf("informe quantos anos voce tem: ");
    scanf("%d",&anos); 
    
    printf("informe quantos meses tem desde seu último aniversário: ");
    scanf("%d",&meses);
    
    printf("informe quantos dias tem desde seu último aniversário: ");
    scanf("%d",&dias);
    
    idade= anos*365 + meses*30 + dias;
    
    printf("\nA sua idade em dias corresponde a %d",idade);
    return 0;
}
